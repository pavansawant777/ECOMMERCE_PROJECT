<%- include("navbar.ejs") %>
<form action="/admin/save_category" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12">
                <h3>Category</h3>
            </div>
            <div class="mb-3 col-md-12">
                Category name
                <input type="text" name="category_name" class="form-control">
            </div>
            <div class="mb-3 col-md-12 text-center">
               <button class="btn btn-primary">Save Category</button>
            </div>
        </div>
    </div>
</form>
<br><br>
<br><br>
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12">
            <h3>Categories</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-sm table-bordered">
                <tr>
                    <th width="5%">Actions</th>
                    <th>SrNo</th>
                    <th>Category Name</th>
                </tr>
                <% for (var i=0;i<cats.length;i++) { %> 
                    <tr>
                        <td>
                            <a href="/admin/edit_category/<%=cats[i].category_id%>"><button class="btn btn-primary p-0 pl-1 pr-1"><i class="fa fa-edit"></i></button></a>
                            <a onclick="return confirm('Are You Sure')" href="/admin/delete_category/<%=cats[i].category_id%>" style="text-decoration: none;"><button class="btn btn-danger p-0 pl-1 pr-1"><i class="fa fa-trash"></i></button></a>
                        </td>
                        <th><%=i+1%></th>
                        <th><%=cats[i].category_name%></th>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
<%- include("footer.ejs") %>