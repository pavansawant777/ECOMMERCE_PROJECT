<%- include("navbar.ejs") %>


<section class="site-banner jarallax padding-large" style="background: url(/images/hero-image.jpg) no-repeat; background-position: top;">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="page-title">Contact us</h1>
          <div class="breadcrumbs">
            <span class="item">
              <a href="/">Home /</a>
            </span>
            <span class="item">Contact us</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="contact-information padding-large">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="section-header">
            <h2 class="section-title">Get in touch</h2>
          </div>
          <div class="contact-detail">
            <div class="detail-list">
              <p><%=about[0].about_details%></p>
              <ul class="list-unstyled list-icon">
                <li>
                  <a href="#"><i class="icon icon-phone"></i>+91 <%=company_info.company_mobile%></a>
                </li>
                <li>
                  <a href="mailto:<%=company_info.company_email%>"><i class="icon icon-mail"></i><%=company_info.company_email%></a>
                </li>
                <li>
                  <a href="#"><i class="icon icon-map-pin"></i><%=company_info.company_address%></a>
                </li>
              </ul>
            </div>
            <div class="social-links">
              <h3>Social Links</h3>
              <ul class="d-flex list-unstyled">
                <li>
                  <a target="_blank" href="<%=company_info.instagram_link%>">
                    <i class="icon icon-instagram"></i>
                  </a>
                </li>
                <li>
                  <a target="_blank" href="<%=company_info.twitter_link%>">
                    <i class="icon icon-twitter"></i>
                  </a>
                </li>
                <li>
                  <a target="_blank" href="<%=company_info.youtube_link%>">
                    <i class="icon icon-youtube-play"></i>
                  </a>
                </li>
                <li>
                  <a target="_blank" href="<%=company_info.telegram_link%>">
                    <i class="icon fa fa-telegram"></i>
                  </a>
                </li>
                <li>
                  <a target="_blank" href="https://wa.me<%=company_info.whatsapp_no%>">
                    <i class="icon fa fa-whatsapp"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="contact-information">
            <div class="section-header">
              <h2 class="section-title">Send us a message</h2>
            </div>
            <form name="contactform" action="/save_contact" method="post" class="contact-form">
              <div class="form-item">
                <input type="text" minlength="2" name="contact_name" placeholder="Name" class="u-full-width bg-light" required>
                <input type="email" name="contact_email" placeholder="E-mail" class="u-full-width bg-light" required>
                <textarea class="u-full-width bg-light" name="contact_message" placeholder="Message" style="height: 180px;" required></textarea>
              </div>
              <label>
                <input type="checkbox" required>
                <span class="label-body">I agree all the <a href="#">terms and conditions</a>
                </span>
              </label>
              <button type="submit" name="submit" class="btn btn-dark btn-full btn-medium">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="google-map">
    <div class="mapouter">
      <div class="gmap_canvas">
        <iframe width="100%" height="500" id="gmap_canvas" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3770.0521343291857!2d74.72775317497818!3d19.10536868210523!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bdcb17ca9d749e5%3A0x516744f9b2f35ec9!2sA2Z%20IT%20HUB%20PVT.%20LTD.!5e0!3m2!1smr!2sin!4v1721995245523!5m2!1smr!2sin"  frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
        <a href="https://getasearch.com/fmovies"></a>
        <br>
        <style>
          .mapouter {
            position: relative;
            text-align: right;
            height: 500px;
            width: 100%;
          }
        </style>
        <a href="https://www.embedgooglemap.net">embedgooglemap.net</a>
        <style>
          .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 500px;
            width: 100%;
          }
        </style>
      </div>
    </div>
  </section>

<%- include("footer.ejs") %>