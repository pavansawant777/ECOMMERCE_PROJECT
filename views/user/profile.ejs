    <form action="/update_profile" method="post">
        <input type="hidden" name="customer_id" value="<%=profile.customer_id%>">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div style="border: 2px solid black;padding: 20px;">
                        <h3>Update profile </h3>
                        Enter Name:
                        <input type="text" name="customer_name" value="<%=profile.customer_name%>" class="form-control" style="width: 100%;">                      
                        Enter Mobile:
                        <input type="number" name="customer_mobile" value="<%=profile.customer_mobile%>" class="form-control" style="width: 100%;">                      
                        Enter Email:
                        <input type="email" name="customer_email" value="<%=profile.customer_email%>" class="form-control" style="width: 100%;">                       
                        Enter Password:
                        <input type="password" name="customer_password" value="<%=profile.customer_password%>" class="form-control"  style="width: 100%;">     

                        <button class="btn btn-primary">Update Profile</button>                       
                       
                    </div>
                    </div>
                </div>
            </div>
    </form>
