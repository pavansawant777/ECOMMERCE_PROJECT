<%- include("navbar.ejs") %>
<form action="/admin/save_blog" method="post"  enctype="multipart/form-data">
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="mb-3 col-md-12">
                    <h3>Add Blog</h3>
                </div>
                <div class="mb-3 col-md-6">
                    Blog Title
                    <input type="text" name="blog_title" class="form-control">
                </div>
                <div class="mb-3 col-md-6">
                    Blog Label
                    <select name="blog_label" class="form-control">
                        <option></option>
                        <option>FASHION</option>
                        <option>TRENDING</option>
                        <option>INSPIRATION</option>
                    </select>
                </div>
                <div class="mb-3 col-md-6">
                    Blog Date
                    <input type="date" name="blog_date" class="form-control"  >
                </div>
                <div class="mb-3 col-6">
                    Blog Image
                    <input type="file" name="blog_image" class="form-control" required accept="image/*">
                </div>
        <div class="mb-3 col-md-12 text-center">
            <button class="btn btn-primary">Save Blog</button>
        </div>
    </div>
</div>
</form>
<br><br>
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12">
            <h3>Blogs</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-sm table-bordered">
                <tr>
                    <th>Action</th>
                    <th>SN</th>
                    <th>Title</th>
                    <th>Label</th>
                    <th>Date</th>
                    <th>Image</th>
                </tr>
                <% for(i=0;i<blogs.length;i++) { %> 
                    <tr>
                        <td style="white-space: nowrap;">
                            <a href="/admin/edit_blog/<%=blogs[i].blog_id%>"><button type="button" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></button></a>
                            <a onclick="return confirm('Are You Sure...?')" href="/admin/delete_blog/<%=blogs[i].blog_id%>" style="text-decoration: none;"><button type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button></a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=blogs[i].blog_title%></td>
                        <td><%=blogs[i].blog_label%></td>
                        <td><%=blogs[i].blog_date%></td>
                        <td><img src="/uploads/<%=blogs[i].blog_image%>" width="100px"></td>
                    </tr>
                    
                <% } %>
            </table>
        </div>   

<%- include("footer.ejs") %>