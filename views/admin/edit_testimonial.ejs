<%- include("navbar.ejs") %>
<form action="/admin/update_testimonial" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="mb-3 col-md-12">
                <h3>Update Testimonial</h3>
                <input type="hidden" name="testimonial_id" value="<%=testimonial_info.testimonial_id%>" class="form-control">
            </div>
            <div class="mb-3 col-md-12">
                Testimonial Details
                <input type="text" name="testimonial_details" value="<%=testimonial_info.testimonial_details%>" class="form-control">
            </div>
            <div class="mb-3 col-md-12">
                Testimonial Name
                <input type="text" name="testimonial_name" value="<%=testimonial_info.testimonial_name%>" class="form-control">
            </div>
            <div class="mb-3 col-md-12 text-center">
               <button class="btn btn-primary">Update Testimonial</button>
            </div>
        </div>
    </div>
</form>

