<%- include("navbar.ejs") %>
<form action="/admin/save_collection" method="post"  enctype="multipart/form-data">
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="mb-3 col-md-12">
                    <h3>Add Collection</h3>
                </div>
                <div class="mb-3 col-md-6">
                    Collection Category
                    <select name="collection_catrgory" class="form-control">
                        <option></option>
                        <option>Casual Collection</option>
                        <option>Basic Collection</option>
                        <option>Best Selling Product</option>
                        <option>Denim collection</option>
                    </select>
                </div>
                <div class="mb-3 col-md-6">
                    Collection Title
                    <input type="text" name="collection_title" class="form-control">
                </div>
                <div class="mb-3 col-md-6">
                    Collection Details
                    <input type="text" name="collection_details" class="form-control"  >
                </div>
                <div class="mb-3 col-6">
                    Collection Image
                    <input type="file" name="collection_image" class="form-control" required accept="image/*">
                </div>
        <div class="mb-3 col-md-12 text-center">
            <button class="btn btn-primary">Save Collection</button>
        </div>
    </div>
</div>
</form>
<br><br>
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="mb-3 col-md-12">
            <h3>Collection</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-sm table-bordered">
                <tr>
                    <th>Action</th>
                    <th>SN</th>
                    <th>Title</th>
                    <th>Label</th>
                    <th>Date</th>
                    <th>Image</th>
                </tr>
                <% for(i=0;i<collection.length;i++) { %> 
                    <tr>
                        <td style="white-space: nowrap;">
                            <a href="/admin/edit_collection/<%=collection[i].collection_id%>"><button type="button" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></button></a>
                            <a onclick="return confirm('Are You Sure...?')" href="/admin/delete_collection/<%=collection[i].collection_id%>" style="text-decoration: none;"><button type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button></a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=collection[i].collection_catrgory%></td>
                        <td><%=collection[i].collection_title%></td>
                        <td><%=collection[i].collection_details%></td>
                        <td><img src="/uploads/<%=collection[i].collection_image%>" width="100px"></td>
                    </tr>
                    
                <% } %>
            </table>
        </div>   

<%- include("footer.ejs") %>